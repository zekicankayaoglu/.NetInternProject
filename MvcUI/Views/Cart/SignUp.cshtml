@model RegisterDtoModel

<h2>Sign Up</h2>
<form asp-controller="Cart" asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="RegisterDto.FirstName">First Name</label>
        <input asp-for="RegisterDto.FirstName" class="form-control" placeholder="First Name of Customer">
        <span asp-validation-for="RegisterDto.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterDto.LastName">Last Name</label>
        <input asp-for="RegisterDto.LastName" class="form-control" placeholder="Last Name of Customer" />
        <span asp-validation-for="RegisterDto.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterDto.Password">Password</label>
        <input asp-for="RegisterDto.Password" class="form-control" placeholder="Password of Customer" />
        <span asp-validation-for="RegisterDto.Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterDto.City">City</label>
        <input asp-for="RegisterDto.City" class="form-control" placeholder="City of Customer" />
        <span asp-validation-for="RegisterDto.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegisterDto.Email">Email</label>
        <input asp-for="RegisterDto.Email" class="form-control" placeholder="Email of Customer" />
        <span asp-validation-for="RegisterDto.Email"></span>
    </div>

    <input type="submit" value="Sign Up" class="btn btn-success btn-group-sm" />
</form>

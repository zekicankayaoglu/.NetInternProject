<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
</head>
<body>
    <div style="background-color:snow">
    <header>
        <div style="background-color:snow">
   <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid"> 
                <i>
                <strong>
                    <p style="color:dodgerblue;"
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DBZ <i class="fa-solid fa-tags"></i></a></p>
                        </strong>
                    </i>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <button style="background-color:aliceblue">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index"><i class="fa-solid fa-house-chimney"></i> HomePage</a>
                        </li>
                        </button>
                            <button style="background-color:aliceblue">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index"> <i class="fa-solid fa-cart-shopping"></i> GotoCart</a>
                        </li>
                    </button>
                            <button style="background-color:aliceblue">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="SignUp"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
                        </li>
                        </button>
                            <button style="background-color:aliceblue">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="LogIn"> <i class="fa-solid fa-arrow-right-to-bracket"></i> Log In</a>
                        </li>
                        </button>
                            <button style="background-color:aliceblue">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i> Log Out</a>
                        </li>
                        </button>
                    </ul>
                </div>
            </div>
        </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                @if(TempData["message"] != null)
                {
                    <div class="alert alert-primary">
                        @TempData["message"]
                        </div>
                }
            </div>

            <div class="row">
                <div class="col-3">
                   @await Component.InvokeAsync(name:"CategoryList")</div>
                <div class="col-9">@RenderBody() </div>
                
            </div>
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DBZ Site - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
